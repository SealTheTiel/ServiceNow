<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margins"
    android:layout_marginTop="@dimen/half_margins"
    android:layout_marginRight="@dimen/default_margins"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/default_corner_radius"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="0"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/leisureImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/food1" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/leisureName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Leisure Name"
                android:textColor="@color/primary_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/leisurePurpose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Description"
                android:textColor="@color/tertiary_blue"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/leisureName"
                app:layout_constraintTop_toBottomOf="@+id/leisureName" />

            <TextView
                android:id="@+id/leisurePrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Price"
                android:textColor="@color/tertiary_blue"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/leisurePurpose"
                app:layout_constraintTop_toTopOf="@+id/leisurePurpose" />


            <androidx.cardview.widget.CardView
                android:id="@+id/leisureButton"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:backgroundTint="@color/primary_blue"

                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="0dp"
                app:cardCornerRadius="@dimen/half_corner_radius"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Info"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
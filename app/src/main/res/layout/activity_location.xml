<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Location">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12" />

    <TextView
        android:id="@+id/locationHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Location"
        android:textAlignment="center"
        android:textColor="@color/primary_blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/locationBackButton"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toStartOf="@+id/locationHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <androidx.cardview.widget.CardView
        android:id="@+id/autolocationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline" >

        <ImageView
            android:id="@+id/currentLocationIcon"
            android:layout_width="40dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/current_location_icon" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Auto-detect Current Location"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/newLocationCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autolocationCard" >

        <ImageView
            android:id="@+id/cashIcon"
            android:layout_width="40dp"
            android:layout_height="44dp"
            app:srcCompat="@drawable/location_icon" />

        <EditText
            android:id="@+id/cashInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:hint="Add New Location"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:textColorHint="@color/primary_blue"
            android:ems="18"
            android:inputType="text"/>

    </androidx.cardview.widget.CardView>

    <RadioButton
        android:id="@+id/cashRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@+id/autolocationCard"
        app:layout_constraintStart_toEndOf="@id/autolocationCard"/>

    <RadioButton
        android:id="@+id/creditRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@+id/newLocationCard"
        app:layout_constraintStart_toEndOf="@id/newLocationCard"/>

</androidx.constraintlayout.widget.ConstraintLayout>
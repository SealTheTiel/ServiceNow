<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="@dimen/double_margins"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/addToCartName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/primary_blue"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/addToCartDetail1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margins"
        android:text="Detail 1"
        android:textColor="@color/primary_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addToCartName"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/addToCartDescription1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margins"
        android:text="TextView"
        android:textColor="#809CFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToCartDetail1" />

    <TextView
        android:id="@+id/addToCartDetail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_margins"
        android:text="Detail 2"
        android:textColor="@color/primary_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToCartDescription1" />

    <TextView
        android:id="@+id/addToCartDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/half_margins"
        android:text="TextView"
        android:textColor="#809CFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToCartDetail2" />


    <ImageButton
        android:id="@+id/addToCartDecrement"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="52dp"
        android:adjustViewBounds="true"
        android:background="@drawable/half_rounded"
        android:backgroundTint="@color/primary_blue"
        android:gravity="center"
        android:padding="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_minus"
        android:stateListAnimator="@null"
        android:tint="@color/white"
        app:background="@null"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/addToCartIncrement"
        app:layout_constraintEnd_toStartOf="@+id/addToCartIncrement"
        app:layout_constraintTop_toTopOf="@+id/addToCartIncrement" />

    <EditText
        android:id="@+id/addToCartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:padding="0dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/addToCartIncrement"
        app:layout_constraintEnd_toStartOf="@+id/addToCartIncrement"
        app:layout_constraintStart_toEndOf="@+id/addToCartDecrement"
        app:layout_constraintTop_toTopOf="@+id/addToCartIncrement" />

    <ImageButton
        android:id="@+id/addToCartIncrement"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/half_rounded"
        android:backgroundTint="@color/primary_blue"
        android:gravity="center"
        android:padding="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_plus"
        android:stateListAnimator="@null"
        android:tint="@color/white"
        app:background="@null"
        app:backgroundTint="@null"
        android:layout_marginTop="@dimen/double_margins"
        android:layout_marginBottom="@dimen/default_margins"
        app:layout_constraintBottom_toTopOf="@+id/addToCartButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addToCartDescription2" />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/primary_blue"
        android:elevation="@dimen/default_elevation"
        android:padding="@dimen/half_margins"
        android:stateListAnimator="@null"
        android:text="Add to Cart"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:tint="@color/primary_blue"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/half_margins"
    android:layout_marginBottom="@dimen/half_margins"
    android:layout_marginLeft="@dimen/default_margins"
    android:layout_marginRight="@dimen/default_margins"
    android:padding="10dp"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/white"
    android:clipToPadding="true"
    android:elevation="@dimen/default_elevation"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartImageHolder"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        app:cardCornerRadius="@dimen/half_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/cartImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/food1" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/cartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Food Name"
        android:textColor="@color/primary_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cartImageHolder"
        app:layout_constraintTop_toTopOf="@+id/cartImageHolder" />

    <TextView
        android:id="@+id/cartPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="#809CFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/cartName"
        app:layout_constraintTop_toBottomOf="@+id/cartName" />


    <ImageButton
        android:id="@+id/cartDecrement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round"
        android:backgroundTint="@color/primary_blue"
        android:gravity="center"
        android:padding="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_minus"
        app:background="@null"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cartPrice"
        android:tint="@color/white"
        android:stateListAnimator="@null" />

    <EditText
        android:id="@+id/cartQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:enabled="false"
        android:gravity="center"
        android:inputType="number"
        android:padding="0dp"
        android:text="1"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cartDecrement"
        app:layout_constraintEnd_toStartOf="@+id/cartIncrement"
        app:layout_constraintStart_toEndOf="@+id/cartDecrement"
        app:layout_constraintTop_toTopOf="@+id/cartDecrement"/>

    <ImageButton
        android:id="@+id/cartIncrement"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/round"
        android:backgroundTint="@color/primary_blue"
        android:gravity="center"
        android:padding="7dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_plus"
        app:background="@null"
        app:backgroundTint="@null"
        android:layout_marginStart="80dp"
        android:tint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/cartDecrement"
        app:layout_constraintStart_toStartOf="@+id/cartDecrement"
        app:layout_constraintTop_toTopOf="@+id/cartDecrement"
        android:stateListAnimator="@null" />

    <ImageButton
        android:id="@+id/cartDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/ic_trash"
        app:tint="@color/red"
        app:background="@null"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>